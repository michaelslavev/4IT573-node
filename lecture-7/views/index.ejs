<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <style>
    .button {
      margin-top: 10px;
      padding: 5px;
      width: 150px;
    }

    ul {
      list-style-type: none;
      padding: 0;
      width: 30%;
    }

    ul li {
      display: flex;
      align-items: center;
      margin-bottom: 10px;
    }

    .todo-info {
      flex: 1;
    }

    .buttons {
      display: flex;
      flex-direction: column;
      align-items: flex-end;
    }
  </style>
</head>
<body>

<h1><%= title %></h1>

<div id="todoList"><%- include('_todos') %></div>

<script>
  const ws = new WebSocket('ws://localhost:3000');

  ws.addEventListener('message', (event) => {
    const data = JSON.parse(event.data);

    if (data.type === 'todoList')
      document.getElementById('todoList').innerHTML = data.html;
  });
</script>

</body>
</html>
