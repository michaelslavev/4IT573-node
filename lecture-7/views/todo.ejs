<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>TODO - <%= todo.id %></title>
  <style>
    .button {
      margin: 10px;
      padding: 5px;
      width: 150px;
    }

    .buttons {
      margin: 10px;
      display: flex;
      flex-direction: row;
    }
  </style>
</head>
<body>

<div id="todoDetail"><%- include('_todo') %></div>

<a href="/">Zpět na seznam todoček</a>


<script>
  const ws = new WebSocket('ws://localhost:3000');

  ws.addEventListener('message', (event) => {
    const data = JSON.parse(event.data);

    const currentTodoId = window.location.pathname.split('/').pop();

    if (data.type === 'todoDeleted_' + currentTodoId) {
      alert('TOHLE TODOČKO BYLO SMAZÁNO.');
      window.location.href = '/';
    }

    if (data.type === 'todoDetail_' + currentTodoId) {
      document.getElementById('todoDetail').innerHTML = data.html;
    }
  });
</script>

</body>
</html>
